<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:src="@drawable/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/relation_tv"
        style="@style/H3Text"
        android:text="관계"
        android:layout_width="28dp"
        android:layout_height="19dp"
        android:textColor="@color/gray100"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <GridLayout
        android:id="@+id/relation_gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:columnCount="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relation_tv">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/lovers_btn"
            style="@style/H2Text"
            android:layout_width="160dp"
            android:layout_height="32dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="12dp"
            android:elevation="0dp"
            android:translationX="0dp"
            android:stateListAnimator="@null"
            android:textColor="@color/relation_button_text_selector"
            android:background="@drawable/relation_button"
            android:gravity="center"
            android:text="연인"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/family_btn"
            style="@style/H2Text"
            android:layout_width="160dp"
            android:layout_height="32dp"
            android:elevation="0dp"
            android:translationX="0dp"
            android:stateListAnimator="@null"
            android:textColor="@color/relation_button_text_selector"
            android:background="@drawable/relation_button"
            android:gravity="center"
            android:text="가족"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/friend_btn"
            style="@style/H2Text"
            android:layout_width="160dp"
            android:layout_height="32dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="12dp"
            android:elevation="0dp"
            android:translationX="0dp"
            android:stateListAnimator="@null"
            android:textColor="@color/relation_button_text_selector"
            android:background="@drawable/relation_button"
            android:gravity="center"
            android:text="친구"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/work_btn"
            style="@style/H2Text"
            android:layout_width="160dp"
            android:layout_height="32dp"
            android:elevation="0dp"
            android:translationX="0dp"
            android:stateListAnimator="@null"
            android:textColor="@color/relation_button_text_selector"
            android:background="@drawable/relation_button"
            android:gravity="center"
            android:text="직장"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/others_btn"
            style="@style/H2Text"
            android:layout_width="160dp"
            android:layout_height="32dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="12dp"
            android:elevation="0dp"
            android:translationX="0dp"
            android:stateListAnimator="@null"
            android:textColor="@color/relation_button_text_selector"
            android:background="@drawable/relation_button"
            android:gravity="center"
            android:text="타인"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/write_btn"
            style="@style/H2Text"
            android:layout_width="160dp"
            android:layout_height="32dp"
            android:elevation="0dp"
            android:translationX="0dp"
            android:stateListAnimator="@null"
            android:textColor="@color/main"
            android:background="@drawable/relation_write_button"
            android:gravity="center"
            android:text="직접 입력"/>
    </GridLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="53dp"
        style="@style/H2Text"
        android:background="@drawable/relation_confirm_button"
        android:textColor="@color/white"
        android:text="선택 완료"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relation_gl"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>