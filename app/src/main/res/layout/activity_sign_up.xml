<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 위쪽 라인 -->
    <View
        android:id="@+id/topLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#D9D9D9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 상단 타이틀 -->
    <TextView
        android:id="@+id/tvTopTitle"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="회원가입"
        android:textColor="#525252"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/topLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 아래쪽 라인 -->
    <View
        android:id="@+id/bottomLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#D9D9D9"
        app:layout_constraintTop_toBottomOf="@id/tvTopTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/tvBasicInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기본정보"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/gray100"
        app:layout_constraintTop_toBottomOf="@id/bottomLine"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="21dp" />

    <TextView
        android:id="@+id/tvRequired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="필수입력사항"
        android:textSize="12sp"
        android:textColor="@color/gray100"
        app:layout_constraintTop_toTopOf="@id/tvBasicInfo"
        app:layout_constraintBottom_toBottomOf="@id/tvBasicInfo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="19dp" />

    <!-- 아이디 라벨 + * -->
    <TextView
        android:id="@+id/tvIdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/gray100"
        app:layout_constraintTop_toBottomOf="@id/tvBasicInfo"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/tvIdStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="16sp"
        android:textColor="#FB3748"
        app:layout_constraintBaseline_toBaselineOf="@id/tvIdLabel"
        app:layout_constraintStart_toEndOf="@id/tvIdLabel" />

    <!-- 아이디 입력 -->
    <EditText
        android:id="@+id/etId"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="@drawable/bg_login_edittext"
        android:hint="아이디를 입력해주세요"
        android:textColorHint="@color/main"
        android:textColor="@color/gray100"
        android:textSize="12sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/tvIdLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="4dp" />

    <!-- 비밀번호 라벨 + * -->
    <TextView
        android:id="@+id/tvPwLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/gray100"
        app:layout_constraintTop_toBottomOf="@id/etId"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tvPwStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="16sp"
        android:textColor="#FB3748"
        app:layout_constraintBaseline_toBaselineOf="@id/tvPwLabel"
        app:layout_constraintStart_toEndOf="@id/tvPwLabel" />

    <!-- 비밀번호 입력 -->
    <EditText
        android:id="@+id/etPw"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="@drawable/bg_login_edittext"
        android:hint="비밀번호를 입력해주세요"
        android:textColorHint="@color/main"
        android:textColor="@color/gray100"
        android:textSize="12sp"
        android:paddingStart="16dp"
        android:paddingEnd="40dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/tvPwLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="4dp" />

    <!-- 비밀번호 보기 토글 버튼 -->
    <ImageButton
        android:id="@+id/btnPwToggle"
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/visibility"
        android:contentDescription="비밀번호 보기"
        app:tint="@color/main"
        app:layout_constraintEnd_toEndOf="@id/etPw"
        app:layout_constraintTop_toTopOf="@id/etPw"
        app:layout_constraintBottom_toBottomOf="@id/etPw"
        android:layout_marginEnd="29dp" />


    <!-- 비밀번호 규칙 안내 -->
    <TextView
        android:id="@+id/tvPwRule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="영문/대소문자/특수문자 중 3가지 이상 조합, 8~16자"
        android:textSize="12sp"
        android:textColor="#333"
        app:layout_constraintTop_toBottomOf="@id/etPw"
        app:layout_constraintStart_toStartOf="@id/etPw"
        app:layout_constraintEnd_toEndOf="@id/etPw"
        android:layout_marginTop="4dp" />

    <!-- 비밀번호 확인 라벨 + * -->
    <TextView
        android:id="@+id/tvPwCheckLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 확인"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/gray100"
        app:layout_constraintTop_toBottomOf="@id/tvPwRule"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tvPwCheckStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="16sp"
        android:textColor="#FB3748"
        app:layout_constraintBaseline_toBaselineOf="@id/tvPwCheckLabel"
        app:layout_constraintStart_toEndOf="@id/tvPwCheckLabel" />

    <!-- 비밀번호 확인 입력 -->
    <EditText
        android:id="@+id/etPwCheck"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="@drawable/bg_login_edittext"
        android:hint="비밀번호를 입력해주세요"
        android:textColorHint="@color/main"
        android:textColor="@color/gray100"
        android:textSize="12sp"
        android:paddingStart="16dp"
        android:paddingEnd="40dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/tvPwCheckLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="4dp" />

    <ImageButton
        android:id="@+id/btnPwToggleCheck"
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/visibility"
        android:contentDescription="비밀번호 보기"
        app:tint="@color/main"
        app:layout_constraintEnd_toEndOf="@id/etPwCheck"
        app:layout_constraintTop_toTopOf="@id/etPwCheck"
        app:layout_constraintBottom_toBottomOf="@id/etPwCheck"
        android:layout_marginEnd="29dp" />

    <!-- 이름 라벨 + * -->
    <TextView
        android:id="@+id/tvNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/gray100"
        app:layout_constraintTop_toBottomOf="@id/etPwCheck"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tvNameStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="16sp"
        android:textColor="#FB3748"
        app:layout_constraintBaseline_toBaselineOf="@id/tvNameLabel"
        app:layout_constraintStart_toEndOf="@id/tvNameLabel" />

    <!-- 이름 입력 -->
    <EditText
        android:id="@+id/etName"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="@drawable/bg_login_edittext"
        android:hint="이름을 입력해주세요"
        android:textColorHint="@color/main"
        android:textColor="@color/gray100"
        android:textSize="12sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/tvNameLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="4dp" />

    <!-- 성별 라벨 + * -->
    <TextView
        android:id="@+id/tvGenderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/gray100"
        app:layout_constraintTop_toBottomOf="@id/etName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tvGenderStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="16sp"
        android:textColor="#FB3748"
        app:layout_constraintBaseline_toBaselineOf="@id/tvGenderLabel"
        app:layout_constraintStart_toEndOf="@id/tvGenderLabel" />

    <!-- 성별 선택 라디오 버튼 -->
    <RadioGroup
        android:id="@+id/rgGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:maxHeight="17dp"
        app:layout_constraintTop_toBottomOf="@id/tvGenderLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/rbMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남"
            android:textColor="@color/gray100" />

        <RadioButton
            android:id="@+id/rbFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여"
            android:textColor="@color/gray100"
            android:layout_marginStart="16dp" />
    </RadioGroup>

    <!-- 다음 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="다음"
        android:textAllCaps="false"
        app:backgroundTint="@color/main"
        app:cornerRadius="10dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/rgGender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="21dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
