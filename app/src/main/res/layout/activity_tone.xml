<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:context=".ToneActivity">
    
    <ImageView
        android:id="@+id/todo_view"
        android:src="@drawable/group_4855"
        android:layout_width="261dp"
        android:layout_height="210dp"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tone_tv"
        app:itemTextAppearanceActive="@style/H5Text"
        android:layout_width="166dp"
        android:layout_height="24dp"
        android:text="말투를 입력해주세요"
        android:gravity="center"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@id/todo_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/default_tone_cl"
        android:layout_width="307dp"
        android:layout_height="81dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/tone_selected_button"
        app:layout_constraintTop_toBottomOf="@id/tone_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/default_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="22dp"
            android:src="@drawable/default_tone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/default_title_tv"
            app:itemTextAppearanceActive="@style/H2Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="(기본) 깔끔하게"
            android:textColor="@color/main"
            app:layout_constraintBottom_toBottomOf="@id/default_iv"
            app:layout_constraintStart_toEndOf="@id/default_iv"
            app:layout_constraintTop_toTopOf="@id/default_iv" />

        <TextView
            android:id="@+id/default_description_tv"
            app:itemTextAppearanceActive="@style/H3Text"
            android:layout_width="182dp"
            android:layout_height="19dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="22dp"
            android:text="감정은 덜어내고, 핵심만 요약"
            android:textColor="@color/main"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/default_iv"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/default_check_iv"
            android:src="@drawable/check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="22dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/friendly_tone_cl"
        android:layout_width="307dp"
        android:layout_height="81dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/tone_button"
        app:layout_constraintTop_toBottomOf="@id/default_tone_cl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/friendly_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="22dp"
            android:src="@drawable/friendly_tone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/friendly_title_tv"
            app:itemTextAppearanceActive="@style/H2Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="친구처럼"
            app:layout_constraintBottom_toBottomOf="@id/friendly_iv"
            app:layout_constraintStart_toEndOf="@id/friendly_iv"
            app:layout_constraintTop_toTopOf="@id/friendly_iv" />

        <TextView
            android:id="@+id/friendly_description_tv"
            app:itemTextAppearanceActive="@style/H3Text"
            android:layout_width="182dp"
            android:layout_height="19dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="22dp"
            android:text="내 편에서 들어주는 찐친 모드"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/friendly_iv"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/friendly_check_iv"
            android:src="@drawable/check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="22dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/counselor_tone_cl"
        android:layout_width="307dp"
        android:layout_height="81dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/tone_button"
        app:layout_constraintTop_toBottomOf="@id/friendly_tone_cl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/counselor_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="21dp"
            android:layout_marginStart="22dp"
            android:src="@drawable/counselor_tone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/counselor_title_tv"
            app:itemTextAppearanceActive="@style/H2Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="상담사처럼"
            app:layout_constraintBottom_toBottomOf="@id/counselor_iv"
            app:layout_constraintStart_toEndOf="@id/counselor_iv"
            app:layout_constraintTop_toTopOf="@id/counselor_iv" />

        <TextView
            android:id="@+id/counselor_description_tv"
            app:itemTextAppearanceActive="@style/H3Text"
            android:layout_width="182dp"
            android:layout_height="19dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="22dp"
            android:text="진심을 이어주는 전문적인 가이드"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/counselor_iv"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/counselor_check_iv"
            android:src="@drawable/check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="22dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tone_confirm_btn"
        app:itemTextAppearanceActive="@style/H3Text"
        android:layout_width="372dp"
        android:layout_height="54dp"
        android:layout_marginBottom="46dp"
        android:elevation="0dp"
        android:translationX="0dp"
        android:stateListAnimator="@null"
        android:textColor="@color/white"
        android:background="@drawable/mbti_next_button"
        android:text="다음"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>